[
    {
        "name": "春",
        "itemStyle": {"color": "#6DA65D"},
        "children": [
            {
                "name": "正月",
                "itemStyle": {"color": "#6DA65D80"},
                "children": [
                    {"name": "春寒多雨水。", "desc": "降水规律相关", "value": 1},
                    {"name": "上八夜弗见参星；月半夜弗见红灯。", "desc": "气候预测经验", "value": 1},
                    {"name": "上元无雨多春旱。", "desc": "气候预测经验", "value": 1},
                    {"name": "正月罂坑好种田。", "desc": "农事时间指南", "value": 1}
                ]
            },
            {
                "name": "二月",
                "itemStyle": {"color": "#6DA65D80"},
                "children": [
                    {"name": "二月十二日夜宜晴，可折十二夜夜雨。", "desc": "气象观测经验", "value": 1},
                    {"name": "二月最怕夜雨，若此夜晴，虽雨多，亦无所妨。", "desc": "降水规律相关", "value": 1},
                    {"name": "二月内得十二个夜晴，则一年雨晴调匀；更十二夜中又雨，为水潦年岁矣。", "desc": "气候预测经验", "value": 1},
                    {"name": "清明断雪，谷雨断霜。", "desc": "节气变化规律", "value": 1}
                ]
            },
            {
                "name": "三月",
                "itemStyle": {"color": "#6DA65D80"},
                "children": [
                    {"name": "三月清明，晒得杨柳枯，十只粪缸九只浮。", "desc": "作物生长预测", "value": 1},
                    {"name": "清明无雨少黄梅。", "desc": "降水规律相关", "value": 1},
                    {"name": "雨打纸钱头，麻麦不见收；雨打墓头钱，今年好种田。", "desc": "农事时间指南", "value": 1},
                    {"name": "清明午前晴，早蚕熟；午后晴，晚蚕熟。", "desc": "蚕茧生长预测", "value": 1},
                    {"name": "檐头插柳青，农人休望晴；檐头插柳焦，农人好作娇。", "desc": "农事经验", "value": 1}
                ]
            }
        ]
    },
    {
        "name": "夏",
        "itemStyle": {"color": "#4A90E2"},
        "children": [
            {
                "name": "四月",
                "itemStyle": {"color": "#4A90E280"},
                "children": [
                    {"name": "二麦不怕神共鬼，只怕四月八夜雨。", "desc": "作物生长预测", "value": 1},
                    {"name": "日暖夜寒，东海也乾。", "desc": "沿海气候特征", "value": 1},
                    {"name": "虹见九月，米贵。", "desc": "气象观测经验", "value": 1},
                    {"name": "麦秀寒（麦秋至后寒）。", "desc": "作物生长预警", "value": 1}
                ]
            },
            {
                "name": "五月",
                "itemStyle": {"color": "#4A90E280"},
                "children": [
                    {"name": "初一雨落井泉浮，初二雨落井泉枯，初三雨落连太湖。", "desc": "降水规律相关", "value": 1},
                    {"name": "一日值雨，人食百草；一日晴，一年丰；一日雨，一年歉。", "desc": "气候预测经验", "value": 1},
                    {"name": "芒后逢壬立梅，至后逢壬梅断。", "desc": "梅雨预测", "value": 1},
                    {"name": "梅里西南，时里潭潭；连吹两日雨立至。", "desc": "降水规律相关", "value": 1},
                    {"name": "梅里雷，低田折舍回。", "desc": "气象预测经验", "value": 1},
                    {"name": "雨打梅头，无水饮牛；雨打梅额，河底开坼。", "desc": "降水规律总结", "value": 1},
                    {"name": "迎梅一寸，送梅一尺", "desc": "梅雨季节规律", "value": 1},
                    {"name": "黄梅天日几番颠", "desc": "梅雨气候特征", "value": 1}
                ]
            },
            {
                "name": "六月",
                "itemStyle": {"color": "#4A90E280"},
                "children": [
                    {"name": "六月初三一阵雨，夜夜风潮到。", "desc": "气候预测经验", "value": 1},
                    {"name": "六月西风吹遍草，八月无风秕子稻。", "desc": "季节性气候特征", "value": 1},
                    {"name": "六月不热，五谷不结。", "desc": "作物生长预测", "value": 1},
                    {"name": "六月盖夹被，田里不生米。", "desc": "气象影响农作物生长", "value": 1},
                    {"name": "夏末秋初一剂雨，赛过唐朝一囤珠。", "desc": "降水规律相关", "value": 1}
                ]
            }
        ]
    },
    {
        "name": "秋",
        "itemStyle": {"color": "#E8C547"},
        "children": [
            {
                "name": "七月",
                "itemStyle": {"color": "#E8C54780"},
                "children": [
                    {"name": "朝立秋，暮飕飕；夜立秋，热到头。", "desc": "气候变化规律", "value": 1},
                    {"name": "秋前生虫，损一茎，发一茎；秋后生虫，损一茎，无了一茎。", "desc": "作物生长预测", "value": 1},
                    {"name": "七月七无洗车，八月八无蓼花。", "desc": "气候预测经验", "value": 1}
                ]
            },
            {
                "name": "八月",
                "itemStyle": {"color": "#E8C54780"},
                "children": [
                    {"name": "八月早禾怕北风，晚禾怕南风。", "desc": "作物生长预测", "value": 1},
                    {"name": "白露日个雨来，一路苦一路。", "desc": "降水规律总结", "value": 1},
                    {"name": "白露前是雨，白露后是鬼。", "desc": "节气变化规律", "value": 1},
                    {"name": "麦秀风摇，稻秀雨浇。", "desc": "作物生长经验", "value": 1},
                    {"name": "田怕秋乾，人怕老穷。", "desc": "气候变化影响", "value": 1}
                ]
            },
            {
                "name": "九月",
                "itemStyle": {"color": "#E8C54780"},
                "children": [
                    {"name": "重阳无雨一冬晴。", "desc": "降水规律相关", "value": 1},
                    {"name": "九日雨，米成脯；重阳湿漉漉，穰草千钱束。", "desc": "降水规律总结", "value": 1},
                    {"name": "霜降了布衲著得，言已有暴寒之色。", "desc": "气候变化预警", "value": 1}
                ]
            }
        ]
    },
    {
        "name": "冬",
        "itemStyle": {"color": "#C44D58"},
        "children": [
            {
                "name": "十月",
                "itemStyle": {"color": "#C44D5880"},
                "children": [
                    {"name": "立冬晴过寒，弗要𣝽柴积。", "desc": "气象观测经验", "value": 1},
                    {"name": "十月雷，人死用耙推。", "desc": "雷电预兆经验", "value": 1},
                    {"name": "十月日如晚寒，锄头无沮除。", "desc": "气候预测经验", "value": 1},
                    {"name": "重阳至此霜飞烈，离土水生莫泡足。", "desc": "气候变化预警", "value": 1}
                ]
            },
            {
                "name": "十一月",
                "itemStyle": {"color": "#C44D5880"},
                "children": [
                    {"name": "冻土冻月，阴冯入。", "desc": "气候预测", "value": 1},
                    {"name": "年夜十七日，气象变。", "desc": "气候预测经验", "value": 1}
                ]
            },
            {
                "name": "十二月",
                "itemStyle": {"color": "#C44D5880"},
                "children": [
                    {"name": "腊月十日冻土千。", "desc": "气候变化预警", "value": 1},
                    {"name": "腊月白雪，田都好；腊月黑雪，田都毁。", "desc": "气象预警经验", "value": 1},
                    {"name": "年终田秋，风雪每年遍。", "desc": "降水变化预测", "value": 1}
                ]
            }
        ]
    }
]
